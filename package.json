{
  "name": "munify-chase",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:docker\" \"compile-seed-schema\"",
    "dev:docker": "docker compose -f ./dev.docker-compose.yml up",
    "dev:server": "while true; do svelte-kit sync && bun run vite dev; echo 'Server crashed, restarting...'; sleep 1; done",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "bun run lint",
    "lint": "bunx biome check --write",
    "db:start": "docker compose up",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:reset": "bun ./src/api/db/reset.ts",
    "db:seed:dev": "bun ./src/api/db/seedConference.ts dev.yaml",
    "compile-seed-schema": "json-schema-to-typescript ./src/api/db/seed-data/schema.json > ./src/api/db/seed-data/schema.d.ts",
    "machine-translate": "inlang machine translate --project project.inlang",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@fontsource/outfit": "^5.2.8",
    "@fontsource/roboto-mono": "^5.2.8",
    "@fontsource/vollkorn": "^5.2.10",
    "@inlang/paraglide-js": "^2.5.0",
    "@m1212e/rumble": "^0.12.20",
    "@m1212e/sveltekit-oidc": "^0.0.33",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.17",
    "@tiptap/core": "^3.10.2",
    "@tiptap/extension-history": "^3.10.2",
    "@tiptap/extension-image": "^3.10.2",
    "@tiptap/extension-link": "^3.10.2",
    "@tiptap/extension-placeholder": "^3.10.2",
    "@tiptap/extension-underline": "^3.10.2",
    "@tiptap/pm": "^3.10.2",
    "@tiptap/starter-kit": "^3.10.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "bits-ui": "^2.14.2",
    "concurrently": "^9.2.1",
    "daisyui": "^5.4.7",
    "dayjs": "^1.11.19",
    "dexie": "^4.2.1",
    "drizzle-seed": "^0.3.1-03a5cdc",
    "flag-icons": "^7.5.0",
    "fuse.js": "^7.1.0",
    "globals": "^16.5.0",
    "hotkeys-js": "^3.13.15",
    "js-yaml": "^4.1.1",
    "json-schema-to-typescript": "^15.0.4",
    "lefthook": "^2.0.4",
    "nanoid": "^5.1.6",
    "svelte": "^5.43.14",
    "svelte-check": "^4.3.4",
    "svelte-confetti": "^2.3.2",
    "svelte-fast-marquee": "^1.0.2",
    "svelte-french-toast": "2.0.0-alpha.0",
    "svelte-grid-extended": "^1.2.1",
    "svelte-tiptap": "^3.0.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-devtools-json": "^1.0.0",
    "world-countries": "^5.1.0",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "drizzle-kit": "^1.0.0-beta.1-03a5cdc",
    "drizzle-orm": "^1.0.0-beta.1-03a5cdc",
    "postgres": "^3.4.7"
  }
}
